<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create New Listing</h3>

    <!-- AI PROMPT -->
    <div class="mb-2">
      <label class="form-label">AI Prompt</label>
      <input
        type="text"
        id="aiPrompt"
        class="form-control"
        placeholder="e.g. Cozy mountain house with lake view"
      />
    </div>

    <button type="button" id="aiBtn" class="btn btn-outline-primary mb-3">
      Generate title & description with AI
    </button>

    <!-- MAIN FORM -->
    <form
      method="POST"
      action="/listings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input
          id="title"
          type="text"
          name="Listing[title]"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea
          id="description"
          name="Listing[description]"
          class="form-control"
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Upload Image</label>
        <input type="file" name="image" class="form-control" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Price</label>
        <input
          type="number"
          name="Listing[price]"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Country</label>
        <input
          type="text"
          name="Listing[country]"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Location</label>
        <input
          type="text"
          name="Listing[location]"
          class="form-control"
          required
        />
      </div>

      <button type="submit" class="btn btn-dark">Add Listing</button>
    </form>
  </div>
</div>

<script src="/css/js/descgen.js"></script>
